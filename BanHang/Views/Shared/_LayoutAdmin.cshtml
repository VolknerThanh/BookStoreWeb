<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="../../Content/style.css" type="text/css" media="all" />
    <!--[if lte IE 6]><link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" /><![endif]-->
    <script src="../../Scripts/jquery-1.4.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.jcarousel.pack.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-func.js" type="text/javascript"></script>
    <script src="../../tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({selector:'textarea'});</script>
</head>
<body>


    <!-- Shell -->
    <div class="shell">
        <!-- Header -->
        <div id="header">
            <h1 id="logo"><a href="#">shoparound</a></h1>
            
            <!-- Navigation -->
            <div id="navigation">
                <ul>
                    <li>@Html.ActionLink("TRANG CHỦ", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Quản lý chủ đề", "Sanpham", "Admin")</li>
                    <li>@Html.ActionLink("Quản lý nhà xuất bản", "Nhaxuatban", "Admin")</li>
                    <li>@Html.ActionLink("Quản lý sách", "Sach", "Admin")</li>
                    <li>
                        <div style="border: 1px solid black;margin-top: 1em; padding: 1em;">
                            <p>Người dùng: <span style="text-transform: uppercase; color: white; font-weight:900; font-size:1.2em;">@Session["TenTaiKhoan"]</span></p>
                        </div>
                    </li>
                    <li>
                        @using (Html.BeginForm("Logout", "Admin", FormMethod.Post)){ 
                            <div>
                                <button type="submit" id="logout" style="text-align:center; padding: 0.5em; margin: 1em;" name="logout">Đăng Xuất</button>
                            </div>
                        }
                    </li>
                </ul>
            </div>
            <!-- End Navigation -->
        </div>
        <!-- End Header -->
        <!-- Main -->
        <div class="container">
            @RenderBody()
        </div>

        <!-- End Main -->
        <!-- Footer -->
        <div id="footer">
            <p class="left"> <a href="#">Home</a> <span>|</span> <a href="#">Support</a> <span>|</span> <a href="#">My Account</a> <span>|</span> <a href="#">The Store</a> <span>|</span> <a href="#">Contact</a> </p>
            <p class="right"> &copy; 2010 Shop Around. Design by <a href="http://chocotemplates.com">Chocotemplates.com</a> </p>
        </div>
        <!-- End Footer -->
    </div>
    <!-- End Shell -->
    
</body>
</html>







