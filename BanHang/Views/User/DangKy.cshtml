
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table align="center">
    <h2 style="text-align:center; margin:1em; color:slategray;">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px;">
            <td>Họ tên khách hàng :</td>
            <td>
                @Html.TextBox("HoTenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Tên đăng nhập :</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Mật khẩu :</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Nhập lại mật khẩu :</td>
            <td>
                @Html.Password("XacnhanMK")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Số điện thoại :</td>
            <td>
                @Html.TextBox("SDT")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Địa chỉ khách hàng :</td>
            <td>
                @Html.TextBox("DiaChi")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Email :</td>
            <td>
                @Html.TextBox("MailKH")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Giới tính :</td>
            <td>
                Nam
                @Html.RadioButton("gioitinh", true, true)
                Nữ
                @Html.RadioButton("gioitinh", false)
                @ViewData["Loi8"]
            </td>
        </tr>
        <tr style="height: 40px;">
            <td>Ngày sinh :</td>
            <td>
                <input type="date" name="ngaySinh" />
            </td>
        </tr>
        <tr style="height: 40px;">
            <td></td>
            <td>
                <input type="submit" value="ĐĂNG KÝ" />
            </td>
        </tr>
    }
</table>